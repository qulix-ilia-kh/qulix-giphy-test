<?xml version="1.0" encoding="utf-8"?>
<manifest package="qulix.com.giphytestapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".GiphyTestApplication">
        <activity
            android:name=".ui.screens.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.screens.DetailsActivity"/>

        <activity android:name=".ui.screens.SearchResultActivity"/>

    </application>

</manifest>
